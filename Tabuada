#include <stdio.h>
#include <stdlib.h>

int main(){
    printf("\t\tTabuada\n");
    int numero_multiplicado, resultado, contador;
    printf("Digite um numero para ver sua tabuada: ");
    scanf("%i", &numero_multiplicado);
    contador = 0;
    while (contador <= 9)
    {
        contador += 1;
        resultado = contador * numero_multiplicado;
        printf("%i", contador);
        printf(" x ");
        printf("%i", numero_multiplicado);
        printf(" = ");
        printf("%i\n", resultado);
       
       
    }
    
}

